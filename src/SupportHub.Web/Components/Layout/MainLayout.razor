@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">Ralis Support Hub</MudText>
        <MudSpacer />
        <MudText Typo="Typo.body2" Class="mr-3">
            <AuthorizeView>
                <Authorized>@context.User.Identity?.Name</Authorized>
            </AuthorizeView>
        </MudText>
        <form method="post" action="MicrosoftIdentity/Account/SignOut">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Inherit">
                Sign Out
            </MudButton>
        </form>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}
